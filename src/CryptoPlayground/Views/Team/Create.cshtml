@using Microsoft.AspNetCore.Mvc.Localization
@model CryptoPlayground.Models.TeamViewModels.TeamViewModel

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Create Team"];
}

<h2>@Localizer["Create Team"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamMembers" class="control-label"></label>
                <select asp-for="TeamMembers" asp-items="ViewBag.AvailableUsers" class="form-control"></select>
                <span asp-validation-for="TeamMembers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Create"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["Back to List"]</a>
</div>

