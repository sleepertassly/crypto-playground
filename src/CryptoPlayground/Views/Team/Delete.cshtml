@using Microsoft.AspNetCore.Mvc.Localization
@model CryptoPlayground.Models.TeamViewModels.TeamViewModel

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Delete Team"];
}
<h2>@Localizer["Delete Team"]</h2>
<h3>@Localizer["Are you sure you want to delete this?"]</h3>
<div>
    <table class="table">
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.Name)
                </td>
            </tr>
        </tbody>
    </table>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-default" /> |
        <a asp-action="Index">@Localizer["Back to List"]</a>
    </form>
</div>
